{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "version": "1.0.1",
    "name": "accordion",
    "displayName": "Accordion Component",
    "description": "QGDS Bootstrap 5 - Accordion Component",
    "icon": {
        "id": "queue",
        "color": {
            "type": "hex",
            "value": "#ae71ff"
        }
    },
    "namespace": "qgds-bs5-local",
    "mainFunction": "main",
    "functions": [
        {
            "name": "main",
            "entry": "main.cjs",
            "input": {
                "type": "object",
                "properties": {
                    "groupId": {
                        "type": "string"
                    },
                    "toggleAll": {
                        "type": "boolean"
                    },
                    "accordionItems": {
                        "title": "Accordion items array",
                        "type": "array",
                        "items": [ {
                            "allOf" : [
                            {
                                "type": "object",
                                "required": [
                                    "id",
                                    "title"
                                ],
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "title": {
                                        "type": "string"
                                    },
                                    "expanded": {
                                        "type": "boolean"
                                    },
                                    "isLocal": {
                                        "type": "boolean",
                                        "title": "Use Inlined data or Referenced Content",
                                        "description": "If enabled, Will allow multi line string, if false, allow Squiz CMS item.",
                                        "default": true
                                    }
                                }
                            },
                                {  "allOf": [
                                    {
                                        "if": {
                                            "required": [],
                                            "properties": {
                                                "accordionItems": {
                                                    "required": [],
                                                    "properties": {
                                                        "isLocal": {
                                                            "const": true
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "then": {
                                            "required": [],
                                            "properties": {
                                                "accordionItems": {
                                                    "type": "object",
                                                    "required": [],
                                                    "properties": {
                                                        "content": {
                                                            "type": "string",
                                                            "format": "multi-line"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "else": {
                                            "required": [],
                                            "properties": {
                                                "accordionItems": {
                                                    "type": "object",
                                                    "required": [],
                                                    "properties": {
                                                        "contentUri": {
                                                            "type": "string",
                                                            "format": "uri-reference"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                ] }
                        ] } ]
                    }
                },
                "required": ["groupId"]
            },
            "output": {
                "responseType": "html",
                "staticFiles": [
                    {
                        "location": "header",
                        "file": {
                            "type": "css",
                            "filepath": "https://static.qgov.net.au/qgds-bootstrap5/v1/v1.x.x-latest/assets/css/qld.bootstrap.css"
                        }
                    },
                    {
                        "location": "footer",
                        "file": {
                            "type": "js",
                            "filepath": "https://static.qgov.net.au/qgds-bootstrap5/v1/v1.x.x-latest/assets/js/bootstrap.min.js"
                        }
                    },
                    {
                        "location": "footer",
                        "file": {
                            "type": "js",
                            "filepath": "https://static.qgov.net.au/qgds-bootstrap5/v1/v1.x.x-latest/assets/js/qld.bootstrap.min.js"
                        }
                    }
                ]
            }
        }
    ],
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "previews/example.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        }
    }
}